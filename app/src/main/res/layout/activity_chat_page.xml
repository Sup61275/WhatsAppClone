<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chatPage"
    android:background="@drawable/w2">
    
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/chatRecyclerView"
        android:layout_above="@id/chatbox"
        android:layout_below="@id/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/chatbox"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sendmessage"
            android:background="@drawable/enter_message_design"
            android:layout_weight="1"
            android:ems="10"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:hint="Message"
            android:inputType="textPersonName"
            android:padding="13dp"/>
        <ImageView
            android:id="@id/sendmessage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/send"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="0"/>
    </LinearLayout>

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            android:background="@color/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme">

            <androidx.constraintlayout.widget.Constraints
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/backarrow"
                    android:layout_constrainBottom_toBottomOf="parent"
                    android:layout_c
                    app:srcCompat="@drawable/leftarrowwhite"

                
                
                
                
                
            </androidx.constraintlayout.widget.Constraints>
                




        </androidx.appcompat.widget.Toolbar>






        
        
        
        
        
        
        

        




</RelativeLayout>